{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noEmit": true,
    "target": "es6",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@Styles/*": [
        "src/styles/*"
      ],
      "@Components/*": [
        "src/components/*"
      ],
      "@Models/*": [
        "src/models/*"
      ],
      "@DigiUtils/*": [
        "src/utils/*"
      ],
      "@Hooks/*": [
        "src/hooks/*"
      ],
      "@Classes/*": [
        "src/classes/*"
      ],
      "@Database/*": [
        "src/database/*"
      ]
    }
  },
  "exclude": ["node_modules"]
}
